{
    "$schema": "http://json-schema.org/schema#",

    "definitions": {

        "typeDefinition": {
            "type": "object",
            "properties": {
                "baseType": { 
                    "type":"string" 
                },
                "length": { 
                    "type":"integer" 
                },
                "precision": {
                    "type": "integer"
                },
                "scale": {
                    "type": "integer"
                },
                "notNull": {
                    "type": "boolean"
                }
            }
        },

        "property": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "itemType": {
                    "type": "string"
                },
                "isDerived": {
                    "type": "boolean"
                },
                "sequenceNumber": {
                    "type": "number"
                },
                "stereotype": {
                    "type": "string"
                },
                "listable": {
                    "type": "boolean"
                },
                "editable": {
                    "type": "boolean"
                },
                "searchable": {
                    "anyOf": [
                        {
                            "type": "boolean"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            }
        },

        "valueObject": {
            "type": "object",
            "properties": {
                "displayName": { 
                    "type": "string"
                },
                "description": { 
                    "type": "string"
                },
                "properties": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/property"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        
        "enumObjectValue": {
            "type": "object",
            "properties": {
                "description": {
                    "type":"string"
                },
                "intValue": {
                     "type": "integer" 
                },
                "strValue": {
                     "type": "string" 
                },
                "value":  {
                    "anyOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "string"
                        },
                        {
                            "type": "object"
                        }
                    ]
                },
                "sequenceNumber": {
                    "type": "number"
                }
            }
        },
        "enumObject": {
            "type": "object",
            "properties": {
                "displayName": { 
                    "type": "string"
                },
                "description": { 
                    "type": "string"
                },
                "baseType": {
                    "type": "string"
                },
                "values": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/enumObjectValue"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },

        "parameter": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "itemType": {
                    "type": "string"
                },
                "sequenceNumber": {
                    "type": "number"
                }
            }
        },

        "method": {
            "type": "object",
            "properties": {
                "parameters": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/parameter" 
                        }
                    },
                    "additionalProperties": false
                },
                "isInternal": {
                    "type": "boolean"
                }
            }
        },

        "entity": {
            "type": "object",
            "properties": {
                "displayName": { 
                    "type": "string"
                },
                "description": { 
                    "type": "string"
                },
                "audited": {
                    "type": "boolean"
                },
                "implements": {
                    "type":"array",
                    "items": {
                        "type": "string"
                    }
                },
                "id": {
                    "allOf": [ 
                        { 
                            "$ref": "#/definitions/property" 
                        },
                        {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "arbitrary": {
                                    "type": "boolean"
                                },
                                "isServerSideGenerated": {
                                    "type": "boolean"
                                }
                            }
                        }
                    ]
                },
                "properties": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/property"
                        }
                    },
                    "additionalProperties": false
                },
                "entities": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/entity"
                        }
                    },
                    "additionalProperties": false
                },
                "methods": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/method"
                        }
                    },
                    "additionalProperties": false
                },
                "reservedProperties": {
                    "type": "object"
                },
                "metadata": {
                    "type": "object"
                },
                "valueObjects": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/valueObject"
                        }
                    },
                    "additionalProperties": false
                },
                "enumObjects": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/enumObject"
                        }
                    },
                    "additionalProperties": false
                }

            }
        },

        "aggregate": {
            "allOf": [ 
                { 
                    "$ref": "#/definitions/entity"
                },
                {
                    "properties": {
                        "aggregateRootName": {
                            "type": "string"
                        }
                    }
                }
            ]
        },

        "service": {
            "type": "object",
            "properties": {
                "displayName": { 
                    "type": "string"
                },
                "description": { 
                    "type": "string"
                },
                "methods": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/method"
                        }
                    },
                    "additionalProperties": false
                }
            }
        },

        "superObject": {
            "type": "object",
            "properties": {
                "displayName": { 
                    "type": "string"
                },
                "description": { 
                    "type": "string"
                },
                "stereotype": {
                    "type": "string"
                },
                "properties": {
                    "type": "object",
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z_0-9]*": {
                            "$ref": "#/definitions/property"
                        }
                    },
                    "additionalProperties": false
                }
            }
        }

    },

    "type": "object",

    "properties": {

        "typeDefinitions": {
            "type": "object",
            "patternProperties": {
                "^[A-Za-z_][A-Za-z_0-9-]*": {
                    "$ref": "#/definitions/typeDefinition"
                }
            },
            "additionalProperties": false
        },

        "valueObjects": {
            "type": "object",
            "patternProperties": {
                "^[A-Z_][A-Za-z_0-9]*": {
                    "$ref": "#/definitions/valueObject"
                }
            },
            "additionalProperties": false
        },

        "enumObjects": {
            "type": "object",
            "patternProperties": {
                "^[A-Z_][A-Za-z_0-9]*": {
                    "$ref": "#/definitions/enumObject"
                }
            },
            "additionalProperties": false
        },

        "aggregates": {
            "type": "object",
            "patternProperties": {
                "^[A-Z_][A-Za-z_0-9]*": {
                    "$ref": "#/definitions/aggregate"
                }
            },
            "additionalProperties": false
        },

        "services": {
            "type": "object",
            "patternProperties": {
                "^[A-Z_][A-Za-z_0-9]*": {
                    "$ref": "#/definitions/service"
                }
            },
            "additionalProperties": false
        },

        "superObjects": {
            "type": "object",
            "patternProperties": {
                "^[A-Z_][A-Za-z_0-9]*": {
                    "$ref": "#/definitions/superObject"
                }
            },
            "additionalProperties": false
        },

        "configuration": {
            "type": "object",
            "properties": {
                "boundedContextName": {
                    "type": "string"
                },
                "displayName": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "defaultModule": {
                    "type": "string"
                },
                "baseUri": {
                    "type": "string"
                },
                "audited": {
                    "type": "boolean"
                },
                "hateoas": {
                    "type": "boolean"
                },

                "namedStringPatterns": {
                    "type": "object"
                },
                "defaultReservedProperties": {
                    "type": "object"
                },
                "metadata": {
                    "type": "object"
                },

                "accountingQuantityTypes": {
                    "patternProperties": {
                        "^[A-Za-z_][A-Za-z_0-9-]*": {
                            "type": "object",
                            "properties": {
                                "zeroLogic": {
                                    "type": "object"
                                },
                                "addLogic": {
                                    "type": "object"
                                },
                                "negateLogic": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "additionalProperties": false
                },

                "java": {
                    "type": "object",
                    "properties": {
                        "boundedContextPackage": {
                            "type": "string"
                        },
                        "specializationPackage": {
                            "type": "string"
                        },
                        "isUsingSeparatedDomainAggregatePackage": {
                            "type": "boolean"
                        },
                        "defaultUserIdType": {
                            "type": "string"
                        }
                    }
                }
            }
        }
 
    }
}
